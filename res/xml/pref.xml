<?xml version="1.0" encoding="utf-8"?>
    <PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
        <CheckBoxPreference android:title="Custom Font Settings" android:key="fontcustom"/>
        <ListPreference android:title="Font typeface" android:key="fontface" android:entries="@array/pref_font_entries" android:entryValues="@array/pref_font_values" android:defaultValue="Monospace" android:dependency="fontcustom"/>
        <CheckBoxPreference android:key="fontbold" android:title="Font Bold" android:dependency="fontcustom"/>
        <EditTextPreference android:defaultValue="14" android:dependency="fontcustom" android:title="Font Size" android:key="fontsize"/>
        
    </PreferenceScreen>
